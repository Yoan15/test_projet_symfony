{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> {{ controller_name }}</h1>

    {{ form_start(form_inscription) }}
        {{ form_row(form_inscription.username, {'label': "Nom d'utilisateur : ", 'attr': {'placeholder': "Votre nom d'utilisateur..."}}) }}
        {{ form_row(form_inscription.firstname, {'label': "Prénom : ", 'attr': {'placeholder': "Votre prénom..."}}) }}
        {{ form_row(form_inscription.lastname, {'label': "Nom : ", 'attr': {'placeholder': "Votre nom..."}}) }}
        {{ form_row(form_inscription.email, {'label': "Email : ", 'attr': {'placeholder': "Votre email..."}}) }}
        {{ form_row(form_inscription.password, {'label': "Mot de passe : ", 'attr': {'placeholder': "Votre mot de passe..."}}) }}
        {{ form_row(form_inscription.passwordConfirm, {'label': "Confirmation mot de passe : ", 'attr': {'placeholder': "Confirmez votre mot de passe..."}}) }}
        <button class="btn btn-success mt-3">S'inscrire</button>
    {{ form_end(form_inscription) }}
</div>
{% endblock %}
