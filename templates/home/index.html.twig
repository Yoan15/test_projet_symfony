{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="d-flex justify-content-center mt-2">
    <h1>Bienvenue sur la page d'accueil de SymfoBlog</h1>
</div>
<div class="row justify-content-center">
    {% for article in articles %}
    <div class="card col-md-4" style="width: 18rem;">
        <img src="/assets/blog/images/{{ article.image }}" class="card-img-top mt-2" alt="{{ article.title }}">
        <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <p class="date">Ecrit le : {{ article.createdAt | date("d/m/Y") }} Ã  {{ article.createdAt | date("H:i") }} par {{ article.author }}</p>
            <a href="{{ path('article', {'id':article.id}) }}" class="btn btn-primary">Voir l'article</a>
        </div>
    </div>

    {% endfor %}
</div>

{% endblock %}
