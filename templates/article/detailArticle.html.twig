{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="img-fluid d-flex justify-content-center mt-2 mb-2">
            <img width="100%" src="/assets/blog/images/{{ article.image }}" alt="{{ article.title }}">
        </div>
        <div class="content">
            <p class="date">Ecrit le : {{ article.createdAt | date("d/m/Y") }} Ã  {{ article.createdAt | date("H:i") }} par {{ article.author }}</p>
            <h1 class="title d-flex justify-content-center mb-3">{{ article.title }}</h1>
            <p class="content text-justify">{{ article.content | raw }}</p>
        </div>
    </div>
{% endblock %}

