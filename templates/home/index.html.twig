{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="d-flex justify-content-center mt-2">
        <h1>Bienvenue sur la page d'accueil de SymfoBlog</h1>
    </div>
    
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <h2 class="d-flex justify-content-center">Articles</h2>
                {% for article in articles %}

                    <div class="card col-md-4 mb-3">
                        <img src="/assets/blog/images/{{ article.image }}" class="card-img-top mt-2" alt="{{ article.title }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="date">Ecrit le : {{ article.createdAt | date("d/m/Y") }} Ã  {{ article.createdAt | date("H:i") }} par {{ article.author }}</p>
                            <a href="{{ path('article', {'id':article.id}) }}" class="btn btn-primary">Voir l'article</a>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>

        <div class="col-md-4">
            <h2 class="d-flex justify-content-center">Categories</h2>
            {% for category in categories %}

                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="{{ path('articles_category', {'id': category.id}) }}" class="text-light">
                            <h3>{{ category.title }}</h3>
                        </a>
                        <span class="badge rounded-pill bg-primary">{{ category.articles | length }} article(s)</span>
                    </li>
                </ul>
                
            {% endfor %}
        </div>
    </div>

        

{% endblock %}
